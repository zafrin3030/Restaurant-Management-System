                  <ToggleGroup fx:id="specialNoteGroup" />
               </toggleGroup>
            </RadioButton>
            <Label fx:id="totalPriceLabel" layoutX="77.0" layoutY="271.0" prefHeight="20.0" prefWidth="72.0" text="0.00">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="30.0" layoutY="268.0" prefHeight="27.0" prefWidth="38.0" text="Total:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <RadioButton fx:id="specialRadioButton" layoutX="21.0" layoutY="458.0" mnemonicParsing="false" prefHeight="21.0" prefWidth="141.0" text="Special  Requirment:" toggleGroup="$specialNoteGroup" />
