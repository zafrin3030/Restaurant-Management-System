               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <RadioButton layoutX="174.0" layoutY="346.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="81.0" text="Nagad">
               <toggleGroup>
                  <ToggleGroup fx:id="paymentGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton layoutX="18.0" layoutY="346.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="97.0" selected="true" text="Bkash" toggleGroup="$paymentGroup" />
            <Label layoutX="21.0" layoutY="392.0" text="Phone Number:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
