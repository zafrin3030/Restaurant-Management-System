                <TableColumn fx:id="foodNameCol" prefWidth="77.0" style="-fx-background-color: #6495ed; -fx-border-color: #000000;" text="Food_Name" />
                <TableColumn fx:id="categoryCol" prefWidth="86.0" style="-fx-background-color: #6495ed; -fx-border-color: #000000;" text="Category" />
                  <TableColumn fx:id="priceCol" prefWidth="70.0" style="-fx-background-color: #6495ed; -fx-border-color: #000000;" text="Price" />
                  <TableColumn fx:id="quantityCol" prefWidth="89.0" style="-fx-background-color: #6495ed; -fx-border-color: #000000;" text="Quantity Left" />
