                  <Font name="System Bold" size="13.0" />
               </font>
            </CheckBox>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goToAdminDashboard" prefHeight="25.0" prefWidth="134.0" style="-fx-background-color: #000000;" text="Login" textFill="#ebe8e8">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Button>
         </children>
      </VBox>
      <ImageView accessibleRole="BUTTON" fitHeight="40.0" fitWidth="51.0" layoutX="743.0" layoutY="20.0" onMouseClicked="#handleLogoutClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../Binty_Project_Image/logout.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="509.0" layoutY="53.0" prefHeight="73.0" prefWidth="225.0" style="-fx-effect: dropshadow(gaussian, #ffcc00, 20, 0.3, 0, 0);" text="The Hills Drop" textAlignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="32.0" />
         </font>
      </Label>
   </children>
