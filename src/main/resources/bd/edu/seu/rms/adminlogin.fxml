<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #fffaf0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.rms.controllers.AdminLoginController">
   <children>
      <ImageView fitHeight="617.0" fitWidth="439.0" layoutX="-2.0" layoutY="-13.0" pickOnBounds="true">
         <viewport>
            <Rectangle2D />
         </viewport>
         <image>
            <Image url="@../../../../Binty_Project_Image/miami-bayside-landscape.jpg" />
         </image>
      </ImageView>
      <VBox alignment="TOP_CENTER" layoutX="479.0" layoutY="211.0" opacity="0.78" prefHeight="279.0" prefWidth="284.0" spacing="20.0" style="-fx-background-color: rgba(245,245,220,0.3); -fx-background-radius: 20; -fx-border-color: #000000; -fx-background-radius: 60; -fx-border-radius: 60;">
         <padding>
            <Insets top="20.0" />
         </padding>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Admin Login">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="loginInput" maxWidth="181.0" prefHeight="26.0" prefWidth="181.0" promptText=" Enter Username or Email" style="-fx-border-color: #000000; -fx-background-radius: 10; -fx-border-radius: 10;">
