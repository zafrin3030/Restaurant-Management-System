                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="searchField" layoutX="28.0" layoutY="79.0" onKeyPressed="#searchKeyValue" prefHeight="25.0" prefWidth="218.0" promptText="Search by item, date, method......" style="-fx-background-radius: 5;" />
