<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-border-color: #000000; -fx-background-color: #dcdcdc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.rms.controllers.CustomerPasswordChangeController">
   <children>
      <AnchorPane layoutX="241.0" layoutY="112.0" prefHeight="388.0" prefWidth="342.0" style="-fx-background-radius: 40; -fx-border-radius: 40; -fx-border-color: #000000; -fx-background-color: #ffffff;">
         <children>
            <TextField fx:id="usernameField" layoutX="67.0" layoutY="88.0" prefHeight="37.0" prefWidth="199.0" promptText="Username" style="-fx-background-radius: 5; -fx-border-color: #000000; -fx-border-radius: 5;" />
            <Button layoutX="113.0" layoutY="306.0" mnemonicParsing="false" onAction="#newPasswordSaveEvent" prefHeight="29.0" prefWidth="107.0" style="-fx-background-radius: 5; -fx-border-color: #000000; -fx-border-radius: 5;" text="Reset Password">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Button>
            <ImageView accessibleRole="BUTTON" fitHeight="29.0" fitWidth="30.0" layoutX="259.0" layoutY="37.0" onMouseClicked="#goToCustomerLogin" pickOnBounds="true">
               <image>
                  <Image url="@../../../../Binty_Project_Image/reception.png" />
               </image>
            </ImageView>
            <PasswordField fx:id="newPasswordField" layoutX="67.0" layoutY="157.0" prefHeight="37.0" prefWidth="199.0" promptText="New Password" style="-fx-background-radius: 5; -fx-border-color: #000000; -fx-border-radius: 5;" />
            <PasswordField fx:id="confirmPasswordField" layoutX="67.0" layoutY="228.0" prefHeight="37.0" prefWidth="199.0" promptText="Confirm Password" style="-fx-background-radius: 5; -fx-border-color: #000000; -fx-border-radius: 5;" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="60.0" layoutY="37.0" prefHeight="30.0" prefWidth="199.0" text="Password Change" textAlignment="CENTER" textFill="#0042bc">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
